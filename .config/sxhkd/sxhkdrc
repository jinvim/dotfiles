# quit/restart bspwm
ctrl + alt + shift + {q,w}
	bspc {quit,wm -r}

# make sxhkd reload its configuration files:
ctrl + alt + shift + k
	pkill -USR1 -x sxhkd

# restart polybar
ctrl + alt + shift + b
  $HOME/.config/polybar/launch.sh


# bspwm commands
# close and kill
ctrl + {shift + w,q}
	bspc node -{c,k}

# focus given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# send window to the given desktop and focuse
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}' -f

# focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# move/resize
super + {s, d}
	bspc desktop -l {monocle, tiled}

# balance
super + a
  bspc query -N -d | xargs -I % bspc node % -B

# rotate window
super + {_, shift + } v
  bspc node @parent -R {-90, 90}

